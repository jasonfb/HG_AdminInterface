<%= turbo_stream.replace "person__#{@person.id}" do %>
  <%= render partial: 'line', locals: {person: @person , account: @account } %>
<% end %>

<%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @person.errors.any? %>
  <%= render partial: "errors", locals: {resource: @person} %>
  <% end %>
<% end %>
