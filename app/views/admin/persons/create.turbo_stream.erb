<% if @person.errors.none? %>
  <%= turbo_stream.replace "persons-list" do %>
  <%= render partial: "list", locals: {persons: @persons , account: @account} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "person-new" do %>
  <% if @person.errors.none? %>
  <%= render partial: "new_button", locals: {account: @account} %>
  <% else %>
  <%= render partial: "new_form", locals: {person: @person , account: @account } %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @person.errors.any? %>
  <%= render partial: "errors", locals: {resource: @person} %>
  <% end %>
<% end %>
