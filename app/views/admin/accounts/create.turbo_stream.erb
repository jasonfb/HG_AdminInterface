<% if @account.errors.none? %>
  <%= turbo_stream.replace "accounts-list" do %>
  <%= render partial: "list", locals: {accounts: @accounts } %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "account-new" do %>
  <% if @account.errors.none? %>
  <%= render partial: "new_button", locals: {} %>
  <% else %>
  <%= render partial: "new_form", locals: {account: @account  } %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @account.errors.any? %>
  <%= render partial: "errors", locals: {resource: @account} %>
  <% end %>
<% end %>
